---
import { Image } from 'astro:assets';
import UnderlinedText from './UnderlinedText.astro';
---

<section id="home" class="bg-white dark:bg-black py-20">
  <div class="relative max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 pt-8">
    <!-- Opci칩n 2: M치s elegante -->
    <div class="text-center max-w-2xl mx-auto mb-12" data-text="reveal">
      <h1
        class="text-3xl lg:text-5xl font-normal tracking-tight text-slate-900 dark:text-white mb-4"
      >
        <UnderlinedText
          text="Nicaragua"
          strokeClass="stroke-green-500"
          darkStrokeClass="dark:stroke-green-400"
        />
        , bienvenida al futuro
        <span class="block mt-1 font-light"
          >del Aire Acondicionado y la climatizaci칩n</span
        >
      </h1>
      <p class="text-base text-slate-600 dark:text-slate-400">
        Tecnolog칤a silenciosa. Dise침o elegante. Eficiencia incomparable.
      </p>
    </div>

    <!-- Imagen Principal -->
    <div class="relative max-w-4xl mx-auto mb-16" data-image="reveal">
      <Image
        src="/ac-temp-blue.webp"
        alt="TempBlue Air Conditioner"
        width={400}
        height={300}
        loading="eager"
        decoding="async"
        format="webp"
        quality={75}
        class="w-full h-auto object-contain"
      />
    </div>

    <!-- Stats - En l칤nea horizontal -->
    <div
      class="max-w-3xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-y-8 md:gap-x-6"
      data-stats="reveal"
    >
      {
        [
          {
            number: '21.5 SEER2',
            label: 'M치ximo ahorro energ칠tico',
          },
          {
            number: '22.5 dB',
            label: 'Nivel de ruido m치s bajo',
          },
          {
            number: '37,500 BTU',
            label: 'M치xima capacidad',
          },
          {
            number: '游꺔 R410A',
            label: 'Refrigerante ecol칩gico',
          },
        ].map((stat) => (
          <div class="text-center">
            <div class="text-lg font-semibold lg:text-xl text-slate-900 dark:text-white">
              {stat.number}
            </div>
            <div class="text-xs lg:text-sm text-slate-500 dark:text-slate-400">
              {stat.label}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  section {
    container-type: inline-size;
  }

  [data-text='reveal'] {
    opacity: 0;
    transform: translateY(10px);
    animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  [data-image='reveal'] {
    opacity: 0;
    animation: fadeIn 1.2s cubic-bezier(0.2, 0.8, 0.2, 1) forwards 0.2s;
  }

  [data-stats='reveal'] {
    opacity: 0;
    transform: translateY(10px);
    animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards 0.4s;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>
