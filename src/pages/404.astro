---
import Navbar from '@/components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: Página no encontrada - TempBlue">
  <Navbar />
  <section class="bg-white dark:bg-black py-20">
    <div class="relative max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 pt-8">
      <!-- Contenido principal -->
      <div class="text-center max-w-2xl mx-auto mb-12" data-text="reveal">
        <h1 class="text-6xl font-bold text-slate-900 dark:text-white mb-4">
          404
        </h1>

        <h2
          class="text-2xl font-medium text-slate-700 dark:text-slate-300 mb-6"
        >
          ¡Ups! Página no encontrada
        </h2>

        <p class="text-base text-slate-600 dark:text-slate-400 mb-8">
          Lo sentimos, la página que buscas no existe o ha sido movida.
        </p>
      </div>
      <!-- Botón de regreso -->
      <div class="text-center" data-stats="reveal">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Volver al inicio
        </a>
      </div>
    </div>
  </section>

  <style>
    section {
      container-type: inline-size;
      min-height: calc(100vh - 64px); /* Altura total menos el navbar */
      display: flex;
      align-items: center;
    }

    [data-text='reveal'] {
      opacity: 0;
      transform: translateY(10px);
      animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }

    [data-image='reveal'] {
      opacity: 0;
      animation: fadeIn 1.2s cubic-bezier(0.2, 0.8, 0.2, 1) forwards 0.2s;
    }

    [data-stats='reveal'] {
      opacity: 0;
      transform: translateY(10px);
      animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards 0.4s;
    }

    @keyframes fadeUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }
  </style>
</Layout>
